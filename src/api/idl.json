{
  "version": "0.1.0",
  "name": "todo_list_app",
  "instructions": [
    {
      "name": "addingTask",
      "accounts": [
        { "name": "task", "isMut": true, "isSigner": true },
        { "name": "author", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [{ "name": "text", "type": "string" }]
    },
    {
      "name": "updatingTask",
      "accounts": [
        { "name": "task", "isMut": true, "isSigner": false },
        { "name": "author", "isMut": false, "isSigner": true }
      ],
      "args": [{ "name": "isDone", "type": "bool" }]
    },
    {
      "name": "deletingTask",
      "accounts": [
        { "name": "task", "isMut": true, "isSigner": false },
        { "name": "author", "isMut": false, "isSigner": true }
      ],
      "args": []
    }
  ],
  "accounts": [
    {
      "name": "Task",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "author", "type": "publicKey" },
          { "name": "isDone", "type": "bool" },
          { "name": "text", "type": "string" },
          { "name": "createdAt", "type": "i64" },
          { "name": "updatedAt", "type": "i64" }
        ]
      }
    }
  ],
  "errors": [
    { "code": 6000, "name": "TextTooLong", "msg": "The text is too long" }
  ]
}
